{
  "displayName": "My Electron App",
  "name": "my-electron-app",
  "description": "Your awesome app description",
  "version": "0.0.0",
  "main": "./node_modules/.dev/main/index.js",
  "resources": "src/resources",
  "author": {
    "name": "Dalton Menezes",
    "email": "daltonmenezes@outlook.com"
  },
  "license": "MIT",
  "packageManager": "pnpm@10.18.3",
  "pnpm": {
    "onlyBuiltDependenciesFile": "./trusted-dependencies-scripts.json"
  },
  "scripts": {
    "start": "electron-vite preview",
    "predev": "run-s clean:dev",
    "dev": "cross-env NODE_ENV=development electron-vite dev --watch",
    "dev:free": "cross-env NODE_ENV=development APP_TIER=free electron-vite dev --watch",
    "dev:pro": "cross-env NODE_ENV=development APP_TIER=pro electron-vite dev --watch",
    "test:errors": "echo \"Error testing guide: docs/ERROR_TESTING.md\\n\\n1. Run: pnpm dev:free (or dev:pro)\\n2. Open browser console\\n3. Use: window.__DEV_TRIGGER_ERROR__('render-error')\\n\\nAvailable types: render-error, async-error, route-error, defect, network-error\"",
    "compile:app": "electron-vite build",
    "compile:app:free": "cross-env APP_TIER=free APP_NAME=\"Geppetto Free\" electron-vite build",
    "compile:app:pro": "cross-env APP_TIER=pro APP_NAME=\"Geppetto Pro\" electron-vite build",
    "compile:packageJSON": "tsx ./src/lib/electron-app/release/modules/prebuild.ts",
    "prebuild": "run-s clean:dev compile:app compile:packageJSON",
    "prebuild:free": "run-s clean:dev compile:app:free compile:packageJSON",
    "prebuild:pro": "run-s clean:dev compile:app:pro compile:packageJSON",
    "build": "pnpm electron-builder",
    "build:free": "cross-env APP_TIER=free APP_NAME=\"Geppetto Free\" APP_ID_SUFFIX=free pnpm electron-builder",
    "build:pro": "cross-env APP_TIER=pro APP_NAME=\"Geppetto Pro\" APP_ID_SUFFIX=pro pnpm electron-builder",
    "build:all": "run-s prebuild:free build:free prebuild:pro build:pro",
    "postinstall": "run-s prebuild install:deps",
    "install:deps": "electron-builder install-app-deps",
    "make:release": "tsx ./src/lib/electron-app/release/modules/release.ts",
    "release": "electron-builder --publish always",
    "release:free": "cross-env APP_TIER=free APP_NAME=\"Geppetto Free\" APP_ID_SUFFIX=free electron-builder --publish always",
    "release:pro": "cross-env APP_TIER=pro APP_NAME=\"Geppetto Pro\" APP_ID_SUFFIX=pro electron-builder --publish always",
    "clean:dev": "rimraf ./node_modules/.dev",
    "lint": "biome check --no-errors-on-unmatched",
    "lint:fix": "biome check --write --no-errors-on-unmatched --assist-enabled=true"
  },
  "dependencies": {
    "@effect-atom/atom-react": "^0.3.4",
    "@effect/platform": "^0.92.1",
    "@effect/platform-node": "^0.98.4",
    "@effect/schema": "^0.75.5",
    "@floating-ui/react": "^0.27.16",
    "@pixi/react": "^8.0.3",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-search": "^0.15.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/xterm": "^5.5.0",
    "chokidar": "^4.0.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "effect": "^3.18.4",
    "electron-router-dom": "^2.1.0",
    "electron-store": "^8.2.0",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.541.0",
    "node-pty": "^1.0.0",
    "pixi.js": "^8.14.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.8.2",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.3",
    "@tailwindcss/vite": "^4.0.9",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.7",
    "@types/semver": "^7.5.8",
    "@vitejs/plugin-react": "^5.0.1",
    "code-inspector-plugin": "^1.2.2",
    "cross-env": "^10.0.0",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "electron-extension-installer": "^2.0.0",
    "electron-vite": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "open": "^10.1.0",
    "rimraf": "^6.0.1",
    "rollup-plugin-inject-process-env": "^1.3.1",
    "semver": "^7.5.4",
    "tailwindcss": "^4.0.9",
    "tsx": "^4.19.3",
    "typescript": "^5.1.6",
    "vite": "^7.1.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.4"
  }
}
